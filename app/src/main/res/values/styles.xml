<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/lightBlue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/BuutonStyle</item>


    </style>
    <style name="BuutonStyle" parent="@android:style/Widget.Button">

        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/button_backgroud</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowColor">@color/DarkGray</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">20dp</item>
    </style>
</resources>
