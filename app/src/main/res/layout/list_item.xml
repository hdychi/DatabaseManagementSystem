<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/AliceBlue">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="课程编号：" />

           <TextView
               android:id="@+id/chooseCourId"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="课程名称：" />

           <TextView
               android:id="@+id/chooseCourName"
               android:layout_width="wrap_content"

               android:layout_height="wrap_content" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:paddingTop="5dp">

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="教师姓名：" />

           <TextView
               android:id="@+id/courTeacherName"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="课程学分：" />

           <TextView
               android:id="@+id/courCredit"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:paddingTop="5dp">

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="适合年级：" />

           <TextView
               android:id="@+id/courMinGrade"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="取消年份：" />

           <TextView
               android:id="@+id/courCancelYear"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:paddingTop="5dp">

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="选课年份：" />

           <TextView
               android:id="@+id/chooseYear"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="80dp"
               android:layout_height="wrap_content"

               android:text="课程成绩：" />

           <TextView
               android:id="@+id/grade"
               android:layout_width="105dp"

               android:layout_height="wrap_content" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:orientation="horizontal"
           android:paddingTop="5dp">

           <Button
               android:id="@+id/list_item_update_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right"
               android:layout_marginRight="10dp"
               android:text="修改" />

           <Button
               android:id="@+id/list_item_delete_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right"
               android:layout_marginRight="10dp"
               android:text="删除" />
       </LinearLayout>
   </LinearLayout>

</android.support.v7.widget.CardView>